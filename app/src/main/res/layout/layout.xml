<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DanhSachTaiLieuActivity">

    <!-- Tiêu đề danh sách tài liệu -->
    <TextView
        android:id="@+id/tvDanhSachTaiLieu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh sách tài liệu"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"/>

    <!-- Danh sách tài liệu -->
    <LinearLayout
        android:id="@+id/llDanhSachTaiLieu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvDanhSachTaiLieu">

        <!-- Mục tài liệu 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_add_shopping_cart_24"
                android:contentDescription="Book Image"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2"
                android:paddingStart="16dp">
                <TextView
                    android:id="@+id/tvTenSach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên sách"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvLoaiSach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loại sách"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvGiaTien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá tiền"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvTrangThai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trạng thái"
                    android:textSize="14sp"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnXemChiTiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem chi tiết"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <!-- Mục tài liệu 2 -->
        <!-- Lặp lại mục tài liệu tương tự như trên -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_add_shopping_cart_24"
                android:contentDescription="Book Image"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2"
                android:paddingStart="16dp">
                <TextView
                    android:id="@+id/tvTenSach2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên sách"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvLoaiSach2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loại sách"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvGiaTien2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá tiền"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvTrangThai2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trạng thái"
                    android:textSize="14sp"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnXemChiTiet2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem chi tiết"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
