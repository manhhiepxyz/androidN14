<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/item_background">

    <!-- Hình ảnh -->
    <ImageView
        android:id="@+id/imgThumbnail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:background="#CCCCCC"
        /> <!-- Placeholder cho ảnh -->

    <!-- Nội dung -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTenSachDaXacNhanPM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sách"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingBottom="14dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/txtTheLoaiDaXacNhanPM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thể loại"
            android:textSize="18sp"
            android:paddingBottom="20dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/txtNguoiMuon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="Người mượn:"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/txtThoiGianMuon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="Thời gian mượn:"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/txtThoiGianTra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời gian trả:"
            android:textSize="18sp"
            android:paddingBottom="20dp"
/>

    </LinearLayout>
</LinearLayout>
